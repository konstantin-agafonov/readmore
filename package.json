{
  "name": "readmore-js",
  "version": "1.0.0",
  "description": "A lightweight JavaScript library for creating 'read more/read less' functionality with text truncation",
  "main": "dist/readmore.js",
  "module": "src/readmore.js",
  "types": "dist/readmore.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:umd && npm run build:esm && npm run build:types",
    "build:umd": "rollup -c rollup.config.js --format umd --file dist/readmore.js",
    "build:esm": "rollup -c rollup.config.js --format esm --file dist/readmore.esm.js",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist src/readmore.d.ts",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "readmore",
    "text-truncation",
    "read-less",
    "expandable-text",
    "javascript",
    "dom",
    "utility",
    "library"
  ],
  "author": "Konstantin Agafonov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/konstantin-agafonov/readmore-js.git"
  },
  "bugs": {
    "url": "https://github.com/konstantin-agafonov/readmore-js/issues"
  },
  "homepage": "https://github.com/konstantin-agafonov/readmore-js#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "rollup": "^4.6.1",
    "typescript": "^5.2.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=14.0.0"
  }
}
